{
	"include": ["src/**/*.ts"],
  "compilerOptions": {
    "outDir": "./build",
    "sourceMap": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "es5",
    "experimentalDecorators": true,
		"moduleResolution": "node",
    "allowJs": true,
    "lib": [ "es2015" ]
  },
	"exclude": [
		"node_modules"
 	]
}
